  "scripts": {
    "serve": "browser-sync start --server --files 'index.html, src/less/styles.less'",
    "lessc": "lessc src/less/styles.less > dist/css/styles.css",
    "watch:css": "onchange src/less/*.less -- npm run lessc",
    "start": "run-p serve watch:css"
